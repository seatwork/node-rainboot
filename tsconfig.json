{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "lib",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}