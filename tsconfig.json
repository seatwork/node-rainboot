{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    // "declaration": true, 
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false
  }
}